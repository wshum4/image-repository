<div class="container">
  <h1>My Posts</h1>

  <div class="container buttons-home mt-3 mb-3 pl-0">
    <%= link_to 'New Post', new_post_path, class: "btn btn-primary" %>
  </div>

  <div class="container mt-3 ml-3 pl-0">
    <div class="row">
      <% @posts.each do |post| %>
        <%= link_to post_path(post), class: 'link-to-links' do %>
          <div class="col-sm-12 col-md-6 col-lg-4 p-3">
            <div class='card-compo'>
              <%= cl_image_tag post.photos[0].key, height: 300, width: 400, crop: :fill %>
              <h5><%= post.name %></h5>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
